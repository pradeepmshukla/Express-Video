@model  System.Data.DataTable

@{
    ViewBag.Title = "Staff List";
    Layout = null;// "~/Views/Shared/_AdminLayout.cshtml";
}

@*<!-- DataTables -->
<link href="../../plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="../../plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<!-- Responsive datatable examples -->
<link href="../../plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />*@
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn mx-5" style="right:267px" onclick="editUser();">EDIT</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn mx-5" style="right:155px" onclick="deleteUser();">DELETE</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn btnmanager btnadd mr-2" onclick="callPage('/UserDetail/NewUser', 'ADD Managers', '')">ADD</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn btncustomer btnadd mr-2" onclick="callPage('/UserDetail/NewUser', 'ADD Customer', '')">ADD</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn btnscript btnadd mr-4" onclick="callPage('/UserDetail/NewUser', 'ADD Script Writer', '')">ADD</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn btnvoiceover btnadd mr-2" onclick="callPage('/UserDetail/NewUser', 'Voice Over', '')">ADD</div>
<div class="btn btn-sm btn-round btn-block waves-effect waves-light newbtn btnanimation btnadd mr-2" onclick="callPage('/UserDetail/NewUser', 'ADD Animation', '')">ADD</div>
<div class="row clstable">
    <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-body table-responsive">
                @*<h5 class="header-title">Row Border Bottom Example</h5>
                    <p class="text-muted mb-3">DataTables has most features enabled by default, so all you need to do to use it with your own ables is to call the construction function: <code>$().DataTable();</code> and border bottom.</p>*@
                <div class="">
                    <table id="datatable2" class="table dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th></th>
                                @foreach (System.Data.DataColumn col in Model.Columns)
                                {
                                    <th>@col.ColumnName</th>
                                }
                                
                                <th class="VOUser">View Samples</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow row in Model.Rows)
                            {
                                <tr>
                                    <td>
                                        <input type="radio" name="edituser" class="rdbuserid form-check-input" data-userid="@row["UserId"]" />
                                    </td>
                                    @foreach (System.Data.DataColumn col in Model.Columns)
                                    {
                                        if (col.ColumnName == "More Details")
                                        {

                                            <td>
                                                <div class="btn" onclick="UserDetails(@row["UserId"])" >View</div>
                                            </td>
                                        }
                                        else if (col.ColumnName == "Dashboard")
                                        {

                                            <td>
                                                <div class="btn" onclick="_GetArtistDashboardByAdmin(@row["UserId"])">View</div>
                                            </td>
                                        }

                                        
                                        else
                                        {
                                            <td> @row[col.ColumnName] </td>
                                        }

                                    }
                                     
                                    <td class="VOUser" onclick="_ViewSample(@row["UserId"])"><div class="btn">VIEW</div></td>
                                     
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".btnadd").hide();
        $(".VOUser").hide();
        if (CurrentUser == "ScriptWriter") {
            $(".btnscript").show();
            
        }
        if (CurrentUser == "VoiceArtist") {
            $(".btnvoiceover").show();
            $(".VOUser").show();
            
        }
        if (CurrentUser == "VideoArtist") {
            $(".btnanimation").show();
            
        }
        if (CurrentUser == "Customer") {
            $(".btncustomer").show();
            
        }
    });
</script>

