<script>
    var _Script_Price = 0;
    var _VO_SamplePrice_Regular = 0;
    var _VO_SamplePrice_Premium = 0;
    var VideoResolution = "Full HD(1920X1080)";
    var VideoResolution_width = 0; VideoResolution_height = 0;
    var SampleVideos = {
        SampleVideoId: 0,
        SampleVideoPrice: 0,
        VideoResolution: VideoResolution
    }
    var ScriptWriter = {
        Script_Required: true,
        Script_VideoConcept: '',
        Script_PurposeofVideo: '',
        Script_AboutCompny: '',
        Script_BenifitesForCustomer: '',
        Script_TargetAudience: '',
        Script_CompanyName: '',
        Script_CompanyWebsite: '',
        Script_LogoName: '',
        Script_ProductServiceImages: '',
        Script_Price: 0

    }
    var VO = {
        VO_Required: true,
        VO_Language: "",
        VO_Gender: "",
        VO_ArtistSamleType: "",
        VO_SampleId: 0,
        VO_SamplePrice: 0,
    }
    var ExtraDetails = {
        ED_VideoDuration: "",
        ED_ExtraDetails: "",
        ED_FileName: ""
    }
    var TotalAmount = 0;
    var OrderSample = {};
    var VideoUrl = "";
    var VideoId = "";
    var VideoPrice = 0;
    $(document).ready(function () {
        //getsampleVideo();
        setVideopath();
        getVoiceArtist();
        SetValue();
        $(".menulistforhide").hide();
        var width = $($(".popup .content")[0]).width() - 350;
        $(".popup input[type='text']").css("width", width + "px");
        $(".popup textarea").css("width", width + "px");

        $("input[type='text']").blur(function () {
            //SetValue();
        });
        $("textarea").blur(function () {
            //SetValue();
        });
        $("input[type='radio']").change(function () {
            SetValue();
        });

        $(".btnsave").click(function () {
            SetValue();
        });
        $(".addtocart").click(function () {
            addtocart();
        });
        $("#filelogo").change(function () {
            if (fileValidation('filelogo', 'image')) {
                var r = UploadFile("filelogo", "hdnlogoname");
            }
        });
        $("#Extrafilelogo").change(function () {
            if (fileValidation('Extrafilelogo', 'image')) {
                var r = UploadFile("Extrafilelogo", "hdnExtrafilelogologoname");

            }
        });

        var index = 0;
        $(".btnAddproductserviceimages").click(function () {
            index++;
            var html = '<div class="Uploadimage form-control" id="uploadbox_' + index + '"><input type="file" id="filelogo_' + index + '" class="Script_ProductServiceImages" /><input type="hidden" id="hdnlogoname_' + index + '" class="hdn_Script_ProductServiceImages" />' +
