                            $("#txtPurposeOfVideo").val(d.Script_PurposeofVideo);
                            $("#txtAboutCompany").val(d.Script_AboutCompany);
                            $("#txtBenifitesForCustomer").val(d.Script_BenifitesForCustomer);
                            $("#txtCompanyName").val(d.Script_CompanyName);
                            $("#txtCompanyWebsite").val(d.Script_CompanyWebsite);
