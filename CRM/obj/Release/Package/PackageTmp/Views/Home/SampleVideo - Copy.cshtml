            _VO_SamplePrice_Premium = $(d).attr("data-vocharges_premium");
            SetValue();
        });

        $(".custom").hide();
        $("#VideoResolution").change(function () {
            if ($(this).val().toLowerCase() == "custom") {
                $(".custom").show();
