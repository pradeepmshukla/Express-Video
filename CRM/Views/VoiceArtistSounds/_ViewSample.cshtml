@model List<DAL.VoiceArtistSounds>
@{
    Layout = null;
    int count = 0;
}
<div class="ViewSample">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <div class="col-12">
                <u>English Sample:-</u>
                @foreach (var item in Model.Where(x => x.SoundLanguage.ToLower() == "english").ToList())
                {
                    @count = count + 1;
                    <div class="row">
                        <div class="col-4">Sample @count</div>
                        <div class="col-8">
                            <audio controls>
                                <source src="~/Uploads/@item.SoundFileName" type="audio/ogg">
                                <source src="~/Uploads/@item.SoundFileName" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                    </div>
                }
            </div>
            <div class="col-12">
                <u>Hindi Sample:-</u>
                @count = 0;
                @foreach (var item in Model.Where(x => x.SoundLanguage.ToLower() == "hindi").ToList())
                {
                    @count = count + 1;
                    <div class="row">
                        <div class="col-4">Sample @count</div>
                        <div class="col-8">
                            <audio controls>
                                <source src="~/Uploads/@item.SoundFileName" type="audio/ogg">
                                <source src="~/Uploads/@item.SoundFileName" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</div>
