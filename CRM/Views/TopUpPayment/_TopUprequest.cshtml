@model DAL.TopUpPayment
@{
    Layout = null;

}
<style>
    .TopUprequest .row{
        padding:10px;
    }
</style>
<div class="TopUprequest">
     <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-4 m-2">
            <span>Select Additional Duration Required </span>
        </div>
         <div class="col-sm-12 col-md-4 col-lg-4 m-2">
             <select id="AdditionalDuration" class="form-control">
                 @foreach (var item in ViewBag.PriceList)
                 {
                     <option value="@item.VideoDuration">@item.VideoDuration</option>
                 }

             </select>
         </div>
         <div class="col-sm-12 col-md-4 col-lg-4 m-2">
             <div class="btn" data-dismiss="modal" style="width:150px" onclick="SentTopUpRequest(@Model.OrderId)" data-orderid="0">Submit</div>
         </div>
    </div>
</div>
 