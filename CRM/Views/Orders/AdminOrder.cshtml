<div class="row">
    <div class="col-lg-12 col-sm-12" style="padding:0px">
        <div class="card-body table-responsive">
            <div class="">
                <table id="datatable2" class="table dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            @foreach (System.Data.DataColumn col in Model.Columns)
                            {

                                //if (col.ColumnName == "Order No" ||col.ColumnName=="Start Date"|| col.ColumnName == "Script" || col.ColumnName == "VO" || col.ColumnName == "Video" ||col.ColumnName=="End Date"|| col.ColumnName == "Order Status")
                                if (col.ColumnName == "Order No" || col.ColumnName == "Start Date" || col.ColumnName == "End Date" || col.ColumnName == "Order Details" || col.ColumnName == "Order Total" || col.ColumnName == "Payment Status" || col.ColumnName == "Client Details" || col.ColumnName == "Invoice" || col.ColumnName == "Top up Invoice" || col.ColumnName == "Rating")
                                {
                                    <th>@col.ColumnName</th>
                                    if (col.ColumnName == "Order No")
                                    {
                                        <th></th>
                                    }

                                }

                            }
                            <th>Status</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.Rows)
                        {
                            <tr style="text-align:center">
                                @foreach (System.Data.DataColumn col in Model.Columns)
                                {
                                    if (col.ColumnName == "Order No" || col.ColumnName == "Start Date" || col.ColumnName == "End Date" || col.ColumnName == "Order Details" || col.ColumnName == "Order Total" || col.ColumnName == "Payment Status" || col.ColumnName == "Client Details" || col.ColumnName == "Invoice" || col.ColumnName == "Top up Invoice" || col.ColumnName == "Rating")
                                    {
                                        if (col.ColumnName == "Order No")
                                        {

                                            <td># @row[col.ColumnName]</td>
                                            <td><div class="btn btn-warning" onclick="ScriptDetails(@row[col.ColumnName])">Video Form</div></td>
                                        }
                                        else if (col.ColumnName == "Order Details")
                                        {
                                            <td class="orderDetails">
                                                <div class="btn" onclick="_OrderDetails(@row["Order No"],'@row["ScriptRequired"]','@row["VORequired"]')">
                                                    View
                                                </div>
                                            </td>
                                        }
                                        else if (col.ColumnName == "Client Details")
                                        {
                                            <td><div class="btn" onclick="_ClientDetails(@row["Client Details"])">View</div></td>
                                        }
                                        else if (col.ColumnName == "Invoice")
                                        {
                                            <td><div class="btn" onclick="_CustomerInvoice(@row["Invoice"])">View</div></td>
                                        }
                                        else if (col.ColumnName == "Top up Invoice")
                                        {
                                            <td><div class="btn" onclick="_TopUpInvoice(@row["Top up Invoice"])">View</div></td>
                                        }
                                        else if (col.ColumnName == "Rating")
                                        {
                                            <td>
                                                @if (Convert.ToString(row[col.ColumnName]) == "-1")
                                                {
                                                    <span>-</span>
                                                }
                                                else
                                                {
                                                    <div class="btn" onclick="ViewCustomerFeedback('@row["Order No"]')">@row[col.ColumnName]</div>
                                                }
                                            </td>
                                        }
                                        else
                                        {
                                            <td>@row[col.ColumnName]</td>
                                        }
                                    }


                                }
                                <td>@Html.Raw(row["Order Details"])</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


