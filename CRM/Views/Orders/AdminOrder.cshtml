<script>
    var OrderId = 0;
    var FeedbackType = "";
    var SentTo = 0;
    var FilesUploaded = "";
    var ClientStatus = "";
    $(document).ready(function () {
        $(".SubmitFeedback").click(function () {
            var FeedbackComments = $(".feedbackComments").val().trim();
            var FilesUploaded = $("#FilesUploaded").val().trim();
            var ClientStatus = $("#ddUpdateClientStatus").val();

            if (FeedbackComments != "" && ClientStatus != "") {
                var data = {

                    FeedbackComments: FeedbackComments,
                    OrderId: OrderId,
                    FeedbackType: FeedbackType,
                    SentTo: SentTo,
                    FilesUploaded: FilesUploaded,
                    ClientStatus: ClientStatus
                }
                $.ajax({
                    type: "POST",
                    url: "/FeedbackDetails/SaveFeedback",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        alert(data);
                        $(".feedbackComments").val('');
                        $("#FilesUploaded").val('');
                        $("#uploadfile").val('');
                        ViewFeedback(OrderId);
                    }
                });
            }

        });

        $("#uploadfile").change(function () {
            UploadFile("uploadfile", "FilesUploaded");
        });


        $(".btnupdate").click(function () {
            var ScriptAssignedUserId = 0;
            var VOAssignedUserId = 0;
            var VideoAssignedUserId = 0;
            var usertype = $(this).attr("data-usertype");
            var UserId = $(this).siblings("select").val();
            var OrderId = $(this).siblings("select").attr("data-orderid");
            if (usertype == "script") {
                ScriptAssignedUserId = UserId;
            }
            if (usertype == "vo") {
                VOAssignedUserId = UserId;
            }
            if (usertype == "video") {
                VideoAssignedUserId = UserId;
            }


            $(this).hide();
            if (OrderId > 0 && UserId > 0) {
                var data = {
                    OrderId: OrderId,
                    ScriptAssignedUserId: ScriptAssignedUserId,
                    VOAssignedUserId: VOAssignedUserId,
                    VideoAssignedUserId: VideoAssignedUserId
                }
                $.ajax({
                    type: "POST",
                    url: "/OrderStatus/AssignOrderToUser",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        alert(data);

                    }
                });
            }
        });
        setTimeout(function () {
            $("#datatable2_filter").find("input").attr("placeholder", "Search by order status, order id, payment status");
            $("#datatable2_filter").find("label").css("color", "white");
        }, 1);


    });
</script>
