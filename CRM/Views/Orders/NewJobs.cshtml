<script>
    $(document).ready(function () {
        $(".btnAssignedToMe").click(function () {
            var c = confirm("Are you sure");
            if (c) {
                var OrderId = $(this).attr("data-orderid");
                var CustomerId = $(this).attr("data-customerid");
                var data = {
                    OrderId: OrderId,
                    CustomerId: CustomerId
                }
                $.ajax({
                    type: "POST",
                    url: "/OrderStatus/ScriptAssigned",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (d) {
                        alert(d);
                        callPage('/Orders/NewJobs', 'New Job', '');
                    }
                });
            }
        });
        $(".btnScriptDetails").click(function () {

            var orderid=$(this).attr("data-orderid");
            var Script_AboutCompany=$(this).attr("data-Script_AboutCompany");
            var Script_BenifitesForCustomer=$(this).attr("data-Script_BenifitesForCustomer");
