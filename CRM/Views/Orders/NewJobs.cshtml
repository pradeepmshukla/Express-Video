            var Script_CompanyWebsite=$(this).attr("data-Script_CompanyWebsite");
            var Script_LogoName=$(this).attr("data-Script_LogoName");
            var Script_PurposeOfVideo=$(this).attr("data-Script_PurposeOfVideo");
            var Script_TargetAudience=$(this).attr("data-Script_TargetAudience");
            var Script_VideoConcept = $(this).attr("data-Script_VideoConcept");
            var html =
                '<tr><td>Order Id</td><td>' + orderid + '</td></tr>' +
                '<tr><td>About Company</td><td>' + Script_AboutCompany + '</td></tr>' +
                '<tr><td>Benifites For Customer</td><td>' + Script_BenifitesForCustomer + '</td></tr>' +
                '<tr><td>Company Name</td><td>' + Script_CompanyName + '</td></tr>' +
                '<tr><td>Company Website</td><td>' + Script_CompanyWebsite + '</td></tr>' +
                '<tr><td>Company Logo</td><td><img src="../Uploads/' + Script_LogoName + '" style="width:200px"/></td></tr>' +
                '<tr><td>Purpose Of Video</td><td>' + Script_PurposeOfVideo + '</td></tr>' +
                '<tr><td>Target Audience</td><td>' + Script_TargetAudience + '</td></tr>' +
                '<tr><td>Video Concept</td><td>' + Script_VideoConcept + '</td></tr>';

            html = '<div class="col-12"><div class="form-group"><label for="username">Order ID</label><div class="form-control"><span>' + orderid + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Extra Video Details</label><div class="form-control"><span>' + Script_AboutCompany + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Benifites For Customer</label><div class="form-control"><span>' + Script_BenifitesForCustomer + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Company Name</label><div class="form-control"><span>' + Script_CompanyName + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Company Website</label><div class="form-control"><span>' + Script_CompanyWebsite + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Company Logo</label><div class=""><span><img src="../Uploads/' + Script_LogoName + '" style="width:200px"/><span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Purpose Of Video</label><div class="form-control"><span>' + Script_PurposeOfVideo + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Target Audience </label><div class="form-control"><span>' + Script_TargetAudience + '<span></div></div></div>' +
                '<div class="col-12"><div class="form-group"><label for="username">Video Concept</label><div class="form-control"><span>' + Script_VideoConcept + '<span></div></div></div>';

            $("#exampleModal").find("table").html(html);
        });
        $(".nowrap").find("td").css("text-align", "center");
    });
</script>