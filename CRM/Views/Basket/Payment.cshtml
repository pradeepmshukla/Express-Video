@model List<DAL.BasketItem>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_megalayout.cshtml";
}

<style>
    table, caption, tbody, tfoot, thead, tr, th, td {
        border: 1px;
    }
</style>

<!-- TOP SECTION
================================================== -->

<section class="section white-section section-home-padding-top">

    <div class="container">
        <div class="sixteen columns">
            <div class="section-title left">

            </div>
        </div>
    </div>

</section>

<!-- SECTION
================================================== -->

<section class="section grey-section section-padding-top-bottom">

    <div class="container">
        <h2>My Items</h2>
        <div class="sixteen columns">
            @if (Model.Count == 0)
            {
                <h6>Your shopping cart is currently empty.</h6>
            }
            else
            {
                <table class="" style="width:100%" border="1">
                    <tr style="background-color:black;color:white">
                        <th style="width:100px">Sr No.</th>
                        <th style="text-align:left">Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                    @{
                        int count = 0;
                        double? Total = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr style="text-align:center">
                            <td>@count</td>
                            <td style="text-align:left;vertical-align:TOP">
                                <table>
                                    <tr>
                                        <td> <img src="" style="width:100px; height:100px" /> </td>
                                        <td style="vertical-align:top"> @item.Name </td>
                                    </tr>
                                </table>

                            </td>
                            <td>Rs. @item.Price</td>
                            <td>@item.Quantity</td>
                            <td>Rs. @(item.Price * item.Quantity)</td>
                            @{
                                Total += item.Price * item.Quantity;
                            }
                        </tr>
                                }
                </table>
                <div class="float-r" style="text-align:right;font-weight:bold; margin-right:40px">Total: Rs. @Total</div>

                                }
        </div>
    </div>

</section>

<section class="section grey-section section-padding-top-bottom">

    <div class="container">
        <h2>Payment Option</h2>
        <div class="sixteen columns">
            <ul>
                <li><input type="radio" name="payment"/> Credit card</li>
                <li><input type="radio" name="payment" /> Debit card</li>
                <li><input type="radio" name="payment" /> Net Banking</li>
                <li><input type="radio" name="payment" /> UPI</li>
            </ul>
        </div>
        <div class="btn btn-default" style="width:250px; float:right">Make Payment</div>
    </div>

</section>



